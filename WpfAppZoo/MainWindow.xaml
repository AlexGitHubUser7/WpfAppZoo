<Window x:Class="WpfAppZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppZoo" 
        xmlns:views="clr-namespace:WpfAppZoo.Views" 
        xmlns:vms="clr-namespace:WpfAppZoo.ViewModels" 
        xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
        mc:Ignorable="d"
        Title="Zoo" 
        Height="500" 
        Width="800"
        FontSize="14">
        <Window.Resources>
            <DataTemplate DataType="{x:Type vms:AddAnimalViewModel}">
                <views:AddAnimalView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:EditAnimalViewModel}">
                <views:EditAnimalView/>
            </DataTemplate>
    </Window.Resources>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <custom:Modal Panel.ZIndex="1" IsOpen="{Binding IsModalOpen}">
                    <ContentControl Margin ="50 25" Content="{Binding CurrentModalViewModel}"/>
                </custom:Modal>            
                <views:AnimalsView Margin="25" DataContext="{Binding AnimalsViewModel}"/>
            </Grid>
        </ScrollViewer>   
</Window>
