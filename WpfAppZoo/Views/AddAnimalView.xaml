<UserControl x:Class="WpfAppZoo.Views.AddAnimalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppZoo.Views" 
             xmlns:components="clr-namespace:WpfAppZoo.Components"
             Width="450"
             d:DesignHeight="450" 
             d:DesignWidth="800"
             mc:Ignorable="d">            
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row = "0" 
            Style="{StaticResource PageHeader}"
            Text="Добавить животное"/>
        
        <components:AnimalDetailsForm 
            Grid.Row="1" 
            Margin="0 30 0 0"
            DataContext="{Binding AnimalDetailsFormViewModel}"/>
    </Grid>
    
</UserControl>
