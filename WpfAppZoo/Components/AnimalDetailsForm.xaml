<UserControl x:Class="WpfAppZoo.Components.AnimalDetailsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppZoo.Components" 
             xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.IsSharedSizeScope="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        Grid.Column="0" 
                        FontWeight="Bold"
                        Text="Кличка"/>
                    <TextBox
                        Grid.Column="1"
                        Margin="20 0 0 0"
                        Text="{Binding AnimalName, UpdateSourceTrigger=PropertyChanged}"/>

                </Grid>

                <Grid Grid.Row="2" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="0" 
                        FontWeight="Bold"
                        Text="Вид"/>
                    <TextBox
                        Grid.Column="1" 
                        Margin ="20 0 0 0" 
                        Text="{Binding AnimalSpecies}"/>
                </Grid>
                
                <Grid Grid.Row="3" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="0" 
                        FontWeight="Bold"
                        Text="Дата рождения"/>                  
  
                    <DatePicker
                        Grid.Column="1" 
                        Margin ="20 0 0 0"                        
                        SelectedDate="{Binding DateOfBirth}"/>                      

                </Grid>
                
                <Grid Grid.Row="4" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        Grid.Column="0" 
                        FontWeight="Bold"
                        Text="Пол"/>
                    <TextBox
                        Grid.Column="1" 
                        Margin ="20 0 0 0" 
                        Text="{Binding Gender}"/>                    
                </Grid>
                
                <Grid Grid.Row="5" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="0" 
                        FontWeight="Bold"
                        Text="Любимая еда"/>
                    <TextBox
                        Grid.Column="1" 
                        Margin ="20 0 0 0" 
                        Text="{Binding FavoriteFood}"/>
                </Grid>

                <Grid Grid.Row="6" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="Label"/>
                        <ColumnDefinition Width="*" MaxWidth="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        Grid.Column="0" 
                        FontWeight="Bold"
                        Text="Здоровое"/>
                    <CheckBox
                        Grid.Column="1"
                        Margin="20 0 0 0"
                        IsChecked="{Binding IsHealthy}"/>
                </Grid>
            </Grid>

            <WrapPanel Grid.Row="1" Margin="0 30 0 0">
                <Button 
                   Margin="0 0 5 0"                
                   Command="{Binding SubmitCommand}" 
                   Content="Добавить" 
                   IsEnabled="{Binding CanSubmit}"/>
                <Button 
                    Margin="0 0 5 0"
                    Command="{Binding CancelCommand}" 
                    Content="Отменить" 
                    Style="{StaticResource ButtonSecondary}"/>
                <custom:LoadingSpinner Diameter="25" Thickness="2" IsLoading="{Binding IsSubmitting}" />
            </WrapPanel>

            <TextBlock 
                Grid.Row="2" 
                Margin="0 15 0 0" 
                Style="{StaticResource ErrorMessage}"
                Text="{Binding ErrorMessage}"
                Visibility="{Binding HasErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</UserControl>
